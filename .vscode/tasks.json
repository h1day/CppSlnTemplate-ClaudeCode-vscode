{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Debug",
      "type": "shell",
      "command": "msbuild",
      "args": [
        "cpp-sln-vscode.sln",
        "/m",
        "/p:Configuration=Debug",
        "/p:Platform=x64"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Build Release",
      "type": "shell",
      "command": "msbuild",
      "args": [
        "cpp-sln-vscode.sln",
        "/m",
        "/p:Configuration=Release",
        "/p:Platform=x64"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Clean Debug",
      "type": "shell",
      "command": "msbuild",
      "args": [
        "cpp-sln-vscode.sln",
        "/t:Clean",
        "/p:Configuration=Debug",
        "/p:Platform=x64"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Clean Release",
      "type": "shell",
      "command": "msbuild",
      "args": [
        "cpp-sln-vscode.sln",
        "/t:Clean",
        "/p:Configuration=Release",
        "/p:Platform=x64"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
